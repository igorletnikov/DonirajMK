<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Activities.MakeRequestActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="18dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="Ставете слика и додадете опис."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <FrameLayout
            android:background="@drawable/border_background"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textColorHint="@android:color/black"
                android:background="@null"
                android:cursorVisible="false"
                android:gravity="top"
                android:textAlignment="gravity"
                android:hint="Опис"
                android:maxLines="10"
                android:minLines="3"
                android:textSize="18sp"
                android:padding="10dp"
                android:id="@+id/message_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/post_image"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_image_24"
                android:layout_width="250dp"
                android:layout_height="250dp"></ImageView>

            <TextView
                android:id="@+id/choose_text"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:text="@string/odberi_slika_underline"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TextView>


        </LinearLayout>

        <TextView
            android:id="@+id/takeimage_text"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:text="@string/odberi_slika_underline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>


        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#702AC5"
            android:text="Прикачи"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"></Button>

    </LinearLayout>
</ScrollView>